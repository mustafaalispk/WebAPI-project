@model CartViewModel
@{
    ViewData["Title"] = "Search Products";
}
<div class="row mb-3">
    <div class="col-6 mt-3">
        <h4>Search Result</h4>
    </div>
    <div class="container">
        @foreach (var product in Model.CardValues)
        {
            <div class="row border mt-2">
                <div class="col-md-8 thumbnail" style="width: 100%; height: 400px">
                    <h3 style="padding-top: 10px;">@product.Key.Name</h3>
                    <p style="padding-top: 10px;">@product.Key.Description</p>
                    <p style="padding-top: 10px;">@product.Key.Price kr</p>
                </div>
                <div class="col-md-4">
                    <a asp-route="productBySlug" asp-route-urlSlug="@product.Key.UrlSlug">
                        <img src="@product.Key.ImageUrl" class="d-block border thumbnail" style="width: 100%; height: 400px" alt="">
                    </a>
                </div>
            </div>
        }

        <p style="padding-top: 10px;">@Model.Total kr</p>

        <button class="btn bg-primary" style="display:block; width:25%; margin-left:350px;">Köp</button>
    </div>
</div>