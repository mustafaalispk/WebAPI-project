@model List<HemTentan.Entities.Category>
    <div class="container">
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-4 thumbnail" style="width:100%; height:260px">
                    
                            <a class="btn border bg-light" style="display: block; width: 100%; height:100%; padding-top:100px;
                             font-size:35px" asp-controller="Category" asp-action="Details" asp-route-Id="@category.Id"
                               role="button">
                                @category.Name
                            </a>
                                            
                </div>
            }
        </div>
    </div>